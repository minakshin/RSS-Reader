= form_for(@feed) do |f|
  - if @feed.errors.any?
    #error_explanation.error.error_flash
      %ul
        - @feed.errors.full_messages.each do |message|
          %li= message
  .field.form-horizontal.clearfix
    .form-group
      = f.label('Name *', class: 'mandatory col-sm-2 control-label')
      .col-sm-8
        = f.text_field :name, placeholder: 'Name', maxlength: '55', class: 'form-control', required: true
    .form-group
      = f.label('URL *', class: 'mandatory col-sm-2 control-label')
      .col-sm-8
        = f.url_field :url, placeholder: 'Url', class: 'form-control', required: true
    .form-group
      = f.label('Description', class: 'mandatory col-sm-2 control-label')
      .col-sm-8
        = f.text_area :description, placeholder: 'Description', maxlength: '255', class: 'form-control'

    .form-group
      .col-sm-8.col-sm-offset-2
        = f.submit 'Add', class: 'btn btn-primary'
        = link_to 'Cancel', feeds_path
